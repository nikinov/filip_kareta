{
  "name": "filip_kareta",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "prebuild": "node scripts/process-blog-posts.js",
    "build": "paraglide-js compile --project ./project.inlang --outdir ./src\\paraglide && next build --turbopack",
    "start": "next start",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"src/__tests__\" --testPathIgnorePatterns=\"e2e|integration\"",
    "test:integration": "jest --testPathPattern=\"integration\"",
    "test:api": "jest --testPathPattern=\"api\"",
    "test:components": "jest --testPathPattern=\"components\"",
    "test:utils": "jest --testPathPattern=\"utils\"",
    "test:a11y": "jest --testPathPattern=\"accessibility\"",
    "test:security": "jest --testPathPattern=\"security\"",
    "test:error-handling": "jest --testNamePattern=\"error.*handling|Error.*Boundary|offline\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:booking": "playwright test booking-flow",
    "test:e2e:performance": "playwright test performance",
    "test:e2e:cross-browser": "playwright test cross-browser",
    "test:performance": "playwright test performance.spec.ts",
    "test:all": "node scripts/run-tests.js all",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:quick": "jest --passWithNoTests --silent --maxWorkers=2",
    "test:changed": "jest --onlyChanged",
    "test:related": "jest --findRelatedTests",
    "analyze": "node scripts/analyze-bundle.js",
    "build:analyze": "npm run build && npm run analyze",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org $SENTRY_ORG --project $SENTRY_PROJECT ./dist && sentry-cli sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT ./dist",
    "monitor:health": "curl -f http://localhost:3000/api/monitoring?type=health || exit 1",
    "monitor:errors": "curl -s http://localhost:3000/api/monitoring?type=errors | jq '.summary.totalErrors'",
    "check:offline": "node scripts/check-offline-functionality.js"
  },
  "dependencies": {
    "@inlang/paraglide-js": "^2.2.0",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.5.2",
    "@paypal/react-paypal-js": "^8.8.3",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/nextjs": "^10.8.0",
    "@stripe/react-stripe-js": "^3.9.2",
    "@stripe/stripe-js": "^7.9.0",
    "@types/mdx": "^2.0.13",
    "@types/nodemailer": "^7.0.1",
    "archiver": "^7.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "jose": "^6.1.0",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-mdx-remote": "^5.0.0",
    "nodemailer": "^7.0.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "reading-time": "^1.5.0",
    "server-only": "^0.0.1",
    "sharp": "^0.33.5",
    "stripe": "^18.5.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.0.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^30.1.1",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/archiver": "^6.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "@inlang/paraglide-js": "2.2.0"
  }
}
